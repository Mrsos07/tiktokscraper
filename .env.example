# Application Settings
APP_NAME=TikTok Scraper
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# Database
DATABASE_URL=sqlite+aiosqlite:///./tik_tok_scraper.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/tiktok_scraper

# Google Drive Configuration
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_FOLDER_ID=1eJ0IpGpy7KrHkh_157n-qBM04WQCCDc_
GOOGLE_SERVICE_ACCOUNT_FILE=credentials.json./credentials/google_drive_credentials.json
GOOGLE_DRIVE_TOKEN_FILE=./credentials/google_drive_token.json
GOOGLE_DRIVE_ROOT_FOLDER_ID=

# TikTok Scraping Settings
TIKTOK_MAX_VIDEOS_PER_REQUEST=20
TIKTOK_REQUEST_DELAY_MIN=2
TIKTOK_REQUEST_DELAY_MAX=5
TIKTOK_MAX_RETRIES=3
TIKTOK_TIMEOUT=30
TIKTOK_USE_PLAYWRIGHT_FALLBACK=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Proxy Configuration (Optional)
USE_PROXY=false
PROXY_URL=
PROXY_ROTATION_ENABLED=false

# External API for No-Watermark (Optional)
NOWATERMARK_API_KEY=
NOWATERMARK_API_URL=

# Celery/Redis (for distributed tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Scheduling
SCHEDULER_ENABLED=true
SCHEDULER_DEFAULT_INTERVAL_MINUTES=60

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=your-secret-api-key-here

# Storage
LOCAL_STORAGE_PATH=./downloads
MAX_CONCURRENT_DOWNLOADS=5
